<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:padding="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="Khalil Gibran"
            android:gravity="center_vertical"
            android:id="@+id/recycleopponame"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/recycleoppotag"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Educational"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:background="@drawable/singlerounded"
            android:layout_alignParentRight="true"
            android:paddingLeft="25dp"
            android:paddingRight = "25dp"
            android:paddingTop = "5dp"
            android:paddingBottom = "5dp"
            android:layout_centerVertical = "true"
            android:id="@+id/recycleoppotag"/>
    </RelativeLayout>
    <org.apmem.tools.layouts.FlowLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content">
    </org.apmem.tools.layouts.FlowLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/recycleoppooppo"
        android:text = ""/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/textColorPrimary"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearexpire">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/black"
                    android:text="Posted on:"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/black"
                    android:text="dd/mm/yyyy"
                    android:layout_marginRight="10dp"
                    android:id="@+id/recycleoppocreateat"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/black"
                    android:text="Expires in:"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/black"
                    android:text="x Days"
                    android:id="@+id/recycleoppoexpire"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/linearexpire">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/pricetagvector"
                android:padding="3dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Rs"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="235"
                    android:textColor="@android:color/white" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/recycleoppoamount"/>
        </FrameLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/textColorPrimary"/>
</LinearLayout>