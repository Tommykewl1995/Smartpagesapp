<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/windowBackground">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:id = "@+id/lll">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:textSize="15dp"
            android:text="Sonesh Jain"
            android:id="@+id/recyclertransactionname"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:textSize="10dp"
            android:text="#1281561NDK"
            android:id="@+id/recyclertransactioncode"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lll"
        android:layout_alignTop="@+id/lll"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginEnd="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorPrimary"
                android:textSize="15dp"
                android:gravity="right"
                android:text="lala"
                android:id="@+id/recyclertransactionamount"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="7dp"
                android:gravity="bottom"
                android:textColor="@color/textColorPrimary"
                android:text="ndckdnwldvnlnvnvvn"
                android:id="@+id/recyclertransactiondate"/>
        </LinearLayout>
        <TextView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="@color/windowBackground"
            android:background="@drawable/pendingred"
            android:text="Pending"
            android:id="@+id/recyclertransactionpending"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/textColorPrimary"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>